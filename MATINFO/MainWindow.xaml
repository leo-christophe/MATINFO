        </Button>
        <Button
            x:Name="btModifierAtt"
            Grid.Row="1"
            Grid.Column="2"
            Width="80"
            Height="50"
            Margin="0,280,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Background="{x:Null}"
            Click="ButtonClickModification"
            Content="Modifier">
            <Button.RenderTransform>
