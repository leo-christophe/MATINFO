            </Button.RenderTransform>
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="8" />
                </Style>
            </Button.Resources>
        </Button>
        <Button
            x:Name="btModifierPers"
            Grid.Row="1"
            Width="80"
            Height="50"
            Margin="0,280,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
