        <Button
            x:Name="btSupprimerPers"
            Grid.Row="1"
            Width="80"
            Height="50"
            Margin="0,0,10,34"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Background="{x:Null}"
            Click="ButtonClickSuppression"
            Content="Supprimer">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform />
