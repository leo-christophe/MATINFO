                </Style>
            </Button.Resources>
        </Button>
        <Button
            x:Name="btModifierCat"
            Grid.Row="1"
            Grid.Column="3"
            Width="60"
            Height="50"
            Margin="0,280,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Background="{x:Null}"
            Click="ButtonClickModification"
            Content="Modifier">
            <Button.RenderTransform>
