<Window
    x:Class="MATINFO.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MATINFO"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Matinfo"
    Width="1300"
    Height="450"
    mc:Ignorable="d" Icon="/ressources/desktop.png" WindowStartupLocation="CenterScreen">
    <Grid Background="#FFEDEDED">
        <Grid.RowDefinitions>
            <RowDefinition Height="69*"/>
            <RowDefinition Height="365*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="311*" />
            <ColumnDefinition Width="500*" />
            <ColumnDefinition Width="272*" />
            <ColumnDefinition Width="217*" />
        </Grid.ColumnDefinitions>
        <ListView
            x:Name="listViewPersonnel"
            Margin="10,23,9,85" Grid.Row="1">
            <ListView.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black"/>
                    <GradientStop Color="White" Offset="0"/>
                </LinearGradientBrush>
            </ListView.Background>
            <ListView.View>
                <GridView>
                    <GridViewColumn
                        Width="20"
                        DisplayMemberBinding="{Binding IdPersonnel}"
                        Header="id" />
                    <GridViewColumn
                        Width="60"
                        DisplayMemberBinding="{Binding NomPersonnel}"
                        Header="Nom" />
                    <GridViewColumn
                        Width="60"
                        DisplayMemberBinding="{Binding PrenomPersonnel}"
                        Header="Prenom" />
                    <GridViewColumn
                        Width="120"
                        DisplayMemberBinding="{Binding MailPersonnel}"
                        Header="Mail" />
                </GridView>
            </ListView.View>
        </ListView>

        <ListView
            x:Name="listViewMateriel"
            Grid.Column="1"
            Margin="10,23,10,85" Grid.Row="1">
            <ListView.View>
                <GridView>
                    <GridViewColumn
                        Width="120"
                        DisplayMemberBinding="{Binding CodeBarreInventaire}"
                        Header="codeBarre" />
                    <GridViewColumn
                        Width="85"
                        DisplayMemberBinding="{Binding CodeCategorie}"
                        Header="codeCategorie" />
                    <GridViewColumn
                        Width="140"
                        DisplayMemberBinding="{Binding NomMateriel}"
                        Header="nomMateriel" />
                    <GridViewColumn
                        Width="125"
                        DisplayMemberBinding="{Binding RefConstructeur}"
                        Header="referenceConstructeur" />
                </GridView>
            </ListView.View>
        </ListView>

        <ListView
            x:Name="listViewAttributions"
            Grid.Column="2"
            Margin="10,23,10,85" Grid.Row="1">
            <ListView.View>
                <GridView>
                    <GridViewColumn
                        Width="50"
                        DisplayMemberBinding="{Binding IdPersonnel}"
                        Header="IdPers." />
                    <GridViewColumn
                        Width="50"
                        DisplayMemberBinding="{Binding CodeBarre}"
                        Header="IdMat." />
                    <GridViewColumn
                        Width="85"
                        DisplayMemberBinding="{Binding Commentaire}"
                        Header="Commentaire" />
                    <GridViewColumn
                        Width="66"
                        DisplayMemberBinding="{Binding DateAttribution}"
                        Header="Date" />
                </GridView>
            </ListView.View>
        </ListView>

        <ListView
            x:Name="listViewCategories"
            Grid.Column="3"
            Margin="7,23,8,85" Grid.Row="1">
            <ListView.View>
                <GridView>
                    <GridViewColumn
                        Width="85"
                        DisplayMemberBinding="{Binding IdCategorie}"
                        Header="codeCategorie" />
                    <GridViewColumn
                        Width="110"
                        DisplayMemberBinding="{Binding NomCategorie}"
                        Header="nomCategorie" />
                </GridView>
            </ListView.View>
        </ListView>
        <Label Content="Gestion du Personnel" HorizontalAlignment="Center" Margin="0,2,0,0" VerticalAlignment="Top" Width="139" Height="26" Grid.Row="1" FontWeight="Bold" FontFamily="Segoe UI Variable Small Semibold"/>
        <Label Content="Gestion du Materiel" HorizontalAlignment="Center" Margin="0,2,0,0" VerticalAlignment="Top" Width="138" Grid.Column="1" Height="26" Grid.Row="1" FontWeight="Bold" FontFamily="Segoe UI Variable Small Semibold"/>
        <Label Content="Gestion des Attributions" HorizontalAlignment="Center" Margin="0,2,0,0" VerticalAlignment="Top" Width="146" Grid.Column="2" Height="26" RenderTransformOrigin="0.49,0.515" Grid.Row="1" FontWeight="Bold" FontFamily="Segoe UI Variable Small Semibold"/>
        <Label Content="Gestion des Catégories" HorizontalAlignment="Center" Margin="0,2,0,0" VerticalAlignment="Top" Width="139" Grid.Column="3" Height="26" Grid.Row="1" FontWeight="Bold" FontFamily="Segoe UI Variable Small Semibold"/>
        <Button x:Name="btCreerMat" Grid.Column="1" Content="Créer" HorizontalAlignment="Center" Margin="0,269,0,0" VerticalAlignment="Top" Width="56" Click="ButtonClickCreate" Grid.Row="1" Height="20" Background="{x:Null}">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="8"/>
                </Style>
            </Button.Resources>
        </Button>
        <Button x:Name="btCreerPers" Content="Créer" HorizontalAlignment="Left" Margin="106,269,0,0" VerticalAlignment="Top" Width="56" Click="ButtonClickCreate" Grid.Row="1" Height="20" Background="{x:Null}">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="8"/>
                </Style>
            </Button.Resources>
        </Button>
        <Button x:Name="btCreerAtt" Grid.Column="2" Content="Créer" HorizontalAlignment="Center" Margin="0,269,0,0" VerticalAlignment="Top" Width="56" Click="ButtonClickCreate" Grid.Row="1" Height="20" BorderBrush="#FF707070" Background="{x:Null}">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="8"/>
                </Style>
            </Button.Resources>
        </Button>
        <Button x:Name="btCreerCat" Grid.Column="3" Content="Créer" HorizontalAlignment="Center" Margin="0,269,0,0" VerticalAlignment="Top" Width="56" Click="ButtonClickCreate" Grid.Row="1" Height="20" Background="{x:Null}">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="8"/>
                </Style>
            </Button.Resources>
        </Button>
        <Button x:Name="btModifierPers" Content="Modifier" HorizontalAlignment="Left" Margin="106,292,0,0" VerticalAlignment="Top" Width="56" Click="ButtonClickModification" Grid.Row="1" Height="20" Background="{x:Null}">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="8"/>
                </Style>
            </Button.Resources>
        </Button>
        <Button x:Name="btModifierMat" Content="Modifier" HorizontalAlignment="Center" Margin="0,292,0,0" VerticalAlignment="Top" Width="56" Click="ButtonClickModification" Grid.Column="1" Grid.Row="1" Height="20" Background="{x:Null}">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="8"/>
                </Style>
            </Button.Resources>
        </Button>
        <Button x:Name="btModifierAtt" Content="Modifier" HorizontalAlignment="Center" Margin="0,292,0,0" VerticalAlignment="Top" Width="56" Click="ButtonClickModification" Grid.Column="2" Grid.Row="1" Height="20" Background="{x:Null}">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="8"/>
                </Style>
            </Button.Resources>
        </Button>
        <Button x:Name="btModifierCat" Content="Modifier" HorizontalAlignment="Center" Margin="0,292,0,0" VerticalAlignment="Top" Width="56" Click="ButtonClickModification" Grid.Column="3" Grid.Row="1" Height="20" Background="{x:Null}">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="8"/>
                </Style>
            </Button.Resources>
        </Button>
        <Button x:Name="btSupprimerPers" Content="Supprimer" HorizontalAlignment="Left" Margin="102,316,0,0" VerticalAlignment="Top" Width="66" Click="ButtonClickSuppression" Grid.Row="1" Height="20" Background="{x:Null}">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="8"/>
                </Style>
            </Button.Resources>
        </Button>
        <Button x:Name="btSupprimerMat" Content="Supprimer" HorizontalAlignment="Center" Margin="0,316,0,0" VerticalAlignment="Top" Width="66" Click="ButtonClickSuppression" Grid.Column="1" Grid.Row="1" Height="20" Background="{x:Null}">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="8"/>
                </Style>
            </Button.Resources>
        </Button>
        <Button x:Name="btSupprimerAtt" Content="Supprimer" HorizontalAlignment="Center" Margin="0,316,0,0" VerticalAlignment="Top" Width="66" Click="ButtonClickSuppression" Grid.Column="2" Grid.Row="1" Height="20" Background="{x:Null}">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="8"/>
                </Style>
            </Button.Resources>
        </Button>
        <Button x:Name="btSupprimerCat" Content="Supprimer" HorizontalAlignment="Center" Margin="0,316,0,0" VerticalAlignment="Top" Width="66" Click="ButtonClickSuppression" Grid.Column="3" Grid.Row="1" Height="20" Background="{x:Null}">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="8"/>
                </Style>
            </Button.Resources>
        </Button>

        <Rectangle HorizontalAlignment="Left" Height="72" Stroke="Black" VerticalAlignment="Center" Width="1300" Grid.ColumnSpan="4" Fill="#FF797878"/>
        <Image Source="/ressources/MATINFO.png" Stretch="Fill" Width="83" Height="70" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <Image Grid.Column="3" Margin="152,5,10,10" Source="/ressources/interrogation-mark.png" Stretch="Fill" VerticalAlignment="Top" HorizontalAlignment="Center"/>
        <Image Grid.Column="3" Margin="10,5,148,11" Source="/ressources/folder.png" Stretch="Fill" VerticalAlignment="Top" HorizontalAlignment="Center"/>
        <Image Grid.Column="2" Margin="14,5,199,11" Source="/ressources/attributes.png" Stretch="Fill" VerticalAlignment="Top" HorizontalAlignment="Center"/>
        <Image Grid.Column="1" Margin="228,5,217,6" Source="/ressources/laptop.png" Stretch="Fill" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <Image Margin="242,4,8,7" Source="/ressources/teacher.png" Stretch="Fill" RenderTransformOrigin="0.5,0.5" VerticalAlignment="Top" HorizontalAlignment="Center">
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.124"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>
    </Grid>
</Window>
