<Window
    x:Class="MATINFO.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MATINFO"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="clr-namespace:MATINFO.Model"
    Title="Matinfo"
    Width="1300"
    Height="450"
    MinWidth="1300"
    MinHeight="450"
    Icon="/ressources/desktop.png"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Window.DataContext>
        <model:ApplicationData x:Name="applicationdata" />
    </Window.DataContext>
    <Grid Background="#FFEDEDED">
        <Grid.RowDefinitions>
            <RowDefinition
                Height="70*"
                MinHeight="70"
                MaxHeight="70" />
            <RowDefinition Height="365*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="311*" />
            <ColumnDefinition Width="471*" />
            <ColumnDefinition Width="301*" />
            <ColumnDefinition Width="217*" />
        </Grid.ColumnDefinitions>
        <ListView
            x:Name="listViewPersonnel"
            Grid.Row="1"
            Margin="10,23,9,99"
            ItemsSource="{Binding Path=LesPersonnels}">
            <ListView.Background>
                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                    <GradientStop Color="Black" />
                    <GradientStop Offset="0" Color="White" />
                </LinearGradientBrush>
            </ListView.Background>
            <ListView.View>
                <GridView>

                    <GridViewColumn
                        Width="60"
                        DisplayMemberBinding="{Binding NomPersonnel}"
                        Header="Nom" />
                    <GridViewColumn
                        Width="60"
                        DisplayMemberBinding="{Binding PrenomPersonnel}"
                        Header="Prenom" />
                    <GridViewColumn
                        Width="Auto"
                        DisplayMemberBinding="{Binding EmailPersonnel}"
                        Header="Mail" />
                </GridView>
            </ListView.View>
        </ListView>

        <ListView
            x:Name="listViewMateriel"
            Grid.Row="1"
            Grid.Column="1"
            Margin="10,23,10,99"
            ItemsSource="{Binding Path=LesMateriaux}">
            <ListView.View>
                <GridView>
                    <GridViewColumn
                        Width="Auto"
                        DisplayMemberBinding="{Binding Path=NomMateriel}"
                        Header="NomMateriel" />

                    <GridViewColumn
                        Width="Auto"
                        DisplayMemberBinding="{Binding Path=UneCategorieM.NomCategorie}"
                        Header="nom categorie" />

                    <GridViewColumn
                        Width="Auto"
                        DisplayMemberBinding="{Binding Path=CodeBarreInventaire}"
                        Header="Code Barre" />

                    <GridViewColumn
                        Width="Auto"
                        DisplayMemberBinding="{Binding Path=ReferenceConstructeur}"
                        Header="Reference Constructeur" />
                </GridView>
            </ListView.View>
        </ListView>

        <ListView
            x:Name="listViewAttributions"
            Grid.Row="1"
            Grid.Column="2"
            Margin="10,23,10,99"
            ItemsSource="{Binding LesAttributions}">
            <ListView.View>
                <GridView>
                    <GridViewColumn
                        Width="50"
                        DisplayMemberBinding="{Binding APersonnel.NomPersonnel}"
                        Header="Nom Personnel" />
                    <GridViewColumn
                        Width="50"
                        DisplayMemberBinding="{Binding AMateriel.NomMateriel}"
                        Header="IdMat." />
                    <GridViewColumn
                        Width="85"
                        DisplayMemberBinding="{Binding Commentaire}"
                        Header="Commentaire" />
                    <GridViewColumn
                        Width="66"
                        DisplayMemberBinding="{Binding DateAttribution}"
                        Header="Date" />
                </GridView>
            </ListView.View>
        </ListView>

        <ListView
            x:Name="listViewCategories"
            Grid.Row="1"
            Grid.Column="3"
            Margin="7,23,8,99"
            ItemsSource="{Binding Path=LesCategoriesMateriel}">
            <ListView.View>
                <GridView>
                    <GridViewColumn
                        Width="Auto"
                        DisplayMemberBinding="{Binding Path=NomCategorie}"
                        Header="nomCategorie" />
                </GridView>
            </ListView.View>
        </ListView>
        <Label
            Grid.Row="1"
            Width="139"
            Height="26"
            Margin="0,2,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center"
            Content="Gestion du Personnel"
            FontFamily="Segoe UI Variable Small Semibold"
            FontWeight="Bold" />
        <Label
            Grid.Row="1"
            Grid.Column="1"
            Width="138"
            Height="26"
            Margin="0,2,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center"
            Content="Gestion du Materiel"
            FontFamily="Segoe UI Variable Small Semibold"
            FontWeight="Bold" />
        <Label
            Grid.Row="1"
            Grid.Column="2"
            Width="146"
            Height="26"
            Margin="0,2,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center"
            Content="Gestion des Attributions"
            FontFamily="Segoe UI Variable Small Semibold"
            FontWeight="Bold"
            RenderTransformOrigin="0.49,0.515" />
        <Label
            Grid.Row="1"
            Grid.Column="3"
            Width="139"
            Height="26"
            Margin="0,2,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center"
            Content="Gestion des Catégories"
            FontFamily="Segoe UI Variable Small Semibold"
            FontWeight="Bold" />
        <Button
            x:Name="btCreerMat"
            Grid.Row="1"
            Grid.Column="1"
            Width="80"
            Height="50"
            Margin="110,0,0,34"
            HorizontalAlignment="Left"
            VerticalAlignment="Bottom"
            Background="{x:Null}"
            Click="ButtonClickCreate"
            Content="Créer">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform />
                    <SkewTransform />
                    <TranslateTransform />
                </TransformGroup>
            </Button.RenderTransform>
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="8" />
                </Style>
            </Button.Resources>
        </Button>
        <Button
            x:Name="btCreerPers"
            Grid.Row="1"
            Width="80"
            Height="50"
            Margin="10,0,0,34"
            HorizontalAlignment="Left"
            VerticalAlignment="Bottom"
            Background="{x:Null}"
            Click="ButtonClickCreate"
            Content="Créer">
            <Button.RenderTransform>
