            </Button.RenderTransform>
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="8" />
                </Style>
            </Button.Resources>
        </Button>
        <Button
            x:Name="btSupprimerMat"
            Grid.Row="1"
            Grid.Column="1"
            Width="80"
            Height="50"
            Margin="0,0,110,34"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Background="{x:Null}"
            Click="ButtonClickSuppression"
            Content="Supprimer">
            <Button.RenderTransform>
                <TransformGroup>
