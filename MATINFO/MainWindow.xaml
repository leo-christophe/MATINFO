                </Style>
            </Button.Resources>
        </Button>
        <Button
            x:Name="btSupprimerCat"
            Grid.Row="1"
            Grid.Column="3"
            Width="60"
            Height="50"
            Margin="0,0,10,34"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Background="{x:Null}"
            Click="ButtonClickSuppression"
            Content="Supprimer">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform />
                    <SkewTransform />
                    <TranslateTransform />
                </TransformGroup>
            </Button.RenderTransform>
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="8" />
                </Style>
            </Button.Resources>
        </Button>

        <Rectangle
            Grid.ColumnSpan="4"
            Height="72"
            VerticalAlignment="Center"
            Fill="LightGray" />
        <Image
            Width="83"
            Height="70"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Source="/ressources/MATINFO.png"
            Stretch="Fill" />
        <Image
            Grid.Column="3"
            Width="25"
            Height="25"
            Margin="0,5,10,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Source="/ressources/interrogation-mark.png"
            Stretch="Fill" />
        <Image
            Grid.Column="3"
            Width="50"
            Height="50"
            Margin="0,5,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Source="/ressources/folder.png" />
        <Image
            Grid.Column="2"
            Width="50"
            Height="50"
            Margin="0,5,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Source="/ressources/attributes.png" />
        <Image
            Grid.Column="1"
            Width="50"
            Height="50"
            Margin="0,5,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Source="/ressources/laptop.png" />
        <Image
            Width="50"
            Height="50"
            Margin="0,5,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            RenderTransformOrigin="0.5,0.5"
            Source="/ressources/teacher.png">
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform />
                    <SkewTransform />
                    <RotateTransform Angle="-0.124" />
                    <TranslateTransform />
                </TransformGroup>
            </Image.RenderTransform>
        </Image>
    </Grid>
</Window>
