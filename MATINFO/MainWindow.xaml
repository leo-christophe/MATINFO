        </Button>
        <Button
            x:Name="btCreerAtt"
            Grid.Row="1"
            Grid.Column="2"
            Width="80"
            Height="50"
            Margin="10,0,0,34"
            HorizontalAlignment="Left"
            VerticalAlignment="Bottom"
            Background="{x:Null}"
            BorderBrush="#FF707070"
            Click="ButtonClickCreate"
            Content="Créer">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform />
