        <Rectangle
            Grid.ColumnSpan="4"
            Width="1300"
            Height="72"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Fill="#FF797878"
            Stroke="Black" />
        <Image
            Width="83"
            Height="70"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Source="/ressources/MATINFO.png"
            Stretch="Fill" />
        <Image
            Grid.Column="3"
            Margin="152,5,10,10"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Source="/ressources/interrogation-mark.png"
            Stretch="Fill" />
        <Image
            Grid.Column="3"
            Margin="10,5,148,11"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Source="/ressources/folder.png"
            Stretch="Fill" />
        <Image
            Grid.Column="2"
            Margin="14,5,199,11"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Source="/ressources/attributes.png"
            Stretch="Fill" />
        <Image
            Grid.Column="1"
            Margin="228,5,217,6"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Source="/ressources/laptop.png"
            Stretch="Fill" />
        <Image
            Margin="242,4,8,7"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            RenderTransformOrigin="0.5,0.5"
            Source="/ressources/teacher.png"
            Stretch="Fill">
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform />
                    <SkewTransform />
                    <RotateTransform Angle="-0.124" />
                    <TranslateTransform />
                </TransformGroup>
            </Image.RenderTransform>
        </Image>
    </Grid>
</Window>
