<Window
    x:Class="MATINFO.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MATINFO"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="clr-namespace:MATINFO.Model"
    Title="Matinfo"
    Width="1300"
    Height="450"
    Icon="/ressources/desktop.png"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Window.DataContext>
        <model:ApplicationData x:Name="applicationdata" />
    </Window.DataContext>
    <Grid Background="#FFEDEDED">
        <Grid.RowDefinitions>
            <RowDefinition Height="69*" />
            <RowDefinition Height="365*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="311*" />
            <ColumnDefinition Width="500*" />
            <ColumnDefinition Width="272*" />
            <ColumnDefinition Width="217*" />
        </Grid.ColumnDefinitions>
        <ListView
            x:Name="listViewPersonnel"
            Grid.Row="1"
            Margin="10,23,9,85">
            <ListView.Background>
                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                    <GradientStop Color="Black" />
                    <GradientStop Offset="0" Color="White" />
                </LinearGradientBrush>
            </ListView.Background>
            <ListView.View>
                <GridView>
                    <GridViewColumn
                        Width="20"
                        DisplayMemberBinding="{Binding IdPersonnel}"
                        Header="id" />
                    <GridViewColumn
                        Width="60"
                        DisplayMemberBinding="{Binding NomPersonnel}"
                        Header="Nom" />
                    <GridViewColumn
                        Width="60"
                        DisplayMemberBinding="{Binding PrenomPersonnel}"
                        Header="Prenom" />
                    <GridViewColumn
                        Width="120"
                        DisplayMemberBinding="{Binding MailPersonnel}"
                        Header="Mail" />
                </GridView>
            </ListView.View>
        </ListView>

        <ListView
            x:Name="listViewMateriel"
            Grid.Row="1"
            Grid.Column="1"
            Margin="10,23,10,85">
            <ListView.View>
                <GridView>
                    <GridViewColumn
                        Width="120"
                        DisplayMemberBinding="{Binding CodeBarreInventaire}"
                        Header="codeBarre" />
                    <GridViewColumn
                        Width="85"
                        DisplayMemberBinding="{Binding CodeCategorie}"
                        Header="codeCategorie" />
                    <GridViewColumn
                        Width="140"
                        DisplayMemberBinding="{Binding NomMateriel}"
                        Header="nomMateriel" />
                    <GridViewColumn
                        Width="125"
                        DisplayMemberBinding="{Binding RefConstructeur}"
                        Header="referenceConstructeur" />
                </GridView>
            </ListView.View>
        </ListView>

        <ListView
            x:Name="listViewAttributions"
            Grid.Row="1"
            Grid.Column="2"
            Margin="10,23,10,85">
            <ListView.View>
                <GridView>
                    <GridViewColumn
                        Width="50"
                        DisplayMemberBinding="{Binding IdPersonnel}"
                        Header="IdPers." />
                    <GridViewColumn
                        Width="50"
                        DisplayMemberBinding="{Binding CodeBarre}"
                        Header="IdMat." />
                    <GridViewColumn
                        Width="85"
                        DisplayMemberBinding="{Binding Commentaire}"
                        Header="Commentaire" />
                    <GridViewColumn
                        Width="66"
                        DisplayMemberBinding="{Binding DateAttribution}"
                        Header="Date" />
                </GridView>
            </ListView.View>
        </ListView>

        <ListView
            x:Name="listViewCategories"
            Grid.Row="1"
            Grid.Column="3"
            Margin="7,23,8,85">
            <ListView.View>
                <GridView>
                    <GridViewColumn
                        Width="85"
                        DisplayMemberBinding="{Binding IdCategorie}"
                        Header="codeCategorie" />
                    <GridViewColumn
                        Width="110"
                        DisplayMemberBinding="{Binding NomCategorie}"
                        Header="nomCategorie" />
                </GridView>
            </ListView.View>
        </ListView>
        <Label
            Grid.Row="1"
            Width="139"
            Height="26"
            Margin="0,2,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Content="Gestion du Personnel"
            FontFamily="Segoe UI Variable Small Semibold"
            FontWeight="Bold" />
        <Label
            Grid.Row="1"
            Grid.Column="1"
            Width="138"
            Height="26"
            Margin="0,2,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Content="Gestion du Materiel"
            FontFamily="Segoe UI Variable Small Semibold"
            FontWeight="Bold" />
        <Label
            Grid.Row="1"
            Grid.Column="2"
            Width="146"
            Height="26"
            Margin="0,2,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Content="Gestion des Attributions"
            FontFamily="Segoe UI Variable Small Semibold"
            FontWeight="Bold"
            RenderTransformOrigin="0.49,0.515" />
        <Label
            Grid.Row="1"
            Grid.Column="3"
            Width="139"
            Height="26"
            Margin="0,2,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Content="Gestion des Catégories"
            FontFamily="Segoe UI Variable Small Semibold"
            FontWeight="Bold" />
        <Button
            x:Name="btCreerMat"
            Grid.Row="1"
            Grid.Column="1"
            Width="56"
            Height="20"
            Margin="0,269,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Background="{x:Null}"
            Click="ButtonClickCreate"
            Content="Créer">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform />
                    <SkewTransform />
                    <TranslateTransform />
                </TransformGroup>
            </Button.RenderTransform>
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="8" />
                </Style>
            </Button.Resources>
        </Button>
