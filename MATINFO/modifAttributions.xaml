<Window x:Class="MATINFO.modifAttributions"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MATINFO"
        mc:Ignorable="d"
        Title="Modification d'attributions" Height="250" Width="225" ResizeMode="NoResize" Icon="/ressources/attributes.png" WindowStartupLocation="CenterScreen">
    <Grid>
        <Button Content="OK" HorizontalAlignment="Left" Margin="183,178,0,0" VerticalAlignment="Top" Click="Button_ClickCreationOK" RenderTransformOrigin="1.045,-1.618"/>
        <Label Content="Commentaire" HorizontalAlignment="Center" Margin="0,63,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.758,0.591" Width="169" HorizontalContentAlignment="Center"/>
        <Label Content="IdPersonnel" HorizontalAlignment="Left" Margin="21,22,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.758,0.591" Width="85" HorizontalContentAlignment="Center" FontSize="11"/>
        <TextBox HorizontalAlignment="Center" Margin="0,90,0,0" TextWrapping="Wrap" Text="Nouveau commentaire" VerticalAlignment="Top" Width="181" Foreground="#FFA6A6A6"/>
        <TextBox Margin="21,45,0,0" TextWrapping="Wrap" Text="Selection" VerticalAlignment="Top" HorizontalAlignment="Left" Width="85" RenderTransformOrigin="0.5,0.5" Foreground="#FFAEABAB" Height="18" Background="#FFC8FDFF">
            <TextBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="1"/>

                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </TextBox.RenderTransform>
        </TextBox>
        <Label Content="Date" HorizontalAlignment="Center" Margin="0,112,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.758,0.591" Width="169" HorizontalContentAlignment="Center"/>
        <Button Content="ANNULER" HorizontalAlignment="Left" Margin="112,178,0,0" VerticalAlignment="Top" Click="Button_ClickCreationOK" RenderTransformOrigin="1.045,-1.618" Width="60"/>
        <TextBox Margin="117,45,0,0" Text="Selection" TextWrapping="Wrap" VerticalAlignment="Top" HorizontalAlignment="Left" Width="86" RenderTransformOrigin="0.5,0.5" Background="#FFD9FFFF" Foreground="#FFB5B5B5">
            <TextBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </TextBox.RenderTransform>
        </TextBox>
        <Label Content="codeBarreMateriel" HorizontalAlignment="Left" Margin="109,22,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.758,0.591" Width="98" HorizontalContentAlignment="Center" Height="26" FontSize="10">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
        <DatePicker HorizontalAlignment="Center" Margin="0,138,0,0" VerticalAlignment="Top" Width="181"/>

    </Grid>
</Window>
