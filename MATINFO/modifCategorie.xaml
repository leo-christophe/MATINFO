<Window x:Class="MATINFO.modifCategorie"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MATINFO"
        mc:Ignorable="d"
        Title="Modification de catégorie" Height="170" Width="245" ResizeMode="NoResize" Icon="/ressources/folder.png" WindowStartupLocation="CenterScreen">
    <Grid>
        <Button Content="VALIDER" HorizontalAlignment="Left" Margin="10,85,0,0" VerticalAlignment="Top" Click="Button_ClickCreationOK" RenderTransformOrigin="1.045,-1.618" Height="36" Width="90"/>
        <Label Content="Nom de la catégorie" HorizontalAlignment="Left" Margin="10,27,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.758,0.591" Width="126" HorizontalContentAlignment="Center"/>
        <TextBox Margin="10,53,0,0" TextWrapping="Wrap" Text="Nouveau nom cat." VerticalAlignment="Top" HorizontalAlignment="Left" Width="205" RenderTransformOrigin="0.5,0.5" Foreground="#FFAEABAB">
            <TextBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="1"/>

                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </TextBox.RenderTransform>
        </TextBox>
        <Button Content="ANNULER" HorizontalAlignment="Left" Margin="125,85,0,0" VerticalAlignment="Top" Click="Button_ClickCreationOK" RenderTransformOrigin="1.045,-1.618" Height="36" Width="90"/>

    </Grid>
</Window>
